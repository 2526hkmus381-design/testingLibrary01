<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .section { margin: 20px 0; }
        table { width: 100%; border-collapse: collapse; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
        .nav { margin: 20px 0; }
        .form-group { margin: 10px 0; }
        .error { color: red; }
    </style>
</head>
<body>
    <h1><%= title %></h1>
    
    <% if (error) { %>
        <div class="error"><%= error %></div>
    <% } %>
    
    <div class="nav">
        <a href="/admin-dashboard">Dashboard</a>
        <a href="/" style="float: right;">Logout</a>
    </div>

    <div class="section">
        <h2>Add New Book</h2>
        <form id="addBookForm">
            <div class="form-group">
                <input type="text" name="title" placeholder="Title" required>
            </div>
            <div class="form-group">
                <input type="text" name="author" placeholder="Author" required>
            </div>
            <div class="form-group">
                <input type="text" name="isbn" placeholder="ISBN" required>
            </div>
            <div class="form-group">
                <input type="text" name="genre" placeholder="Genre" required>
            </div>
            <div class="form-group">
                <input type="number" name="publishedYear" placeholder="Published Year" required>
            </div>
            <div class="form-group">
                <input type="number" name="totalCopies" placeholder="Total Copies" required>
            </div>
            <div class="form-group">
                <input type="number" name="availableCopies" placeholder="Available Copies" required>
            </div>
            <div class="form-group">
                <textarea name="description" placeholder="Description" rows="3"></textarea>
            </div>
            <button type="submit">Add Book</button>
        </form>
    </div>

    <div class="section">
        <h2>Books Management</h2>
        <table id="booksTable">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>Available</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                    <tr data-id="<%= book._id %>">
                        <td><%= book.title %></td>
                        <td><%= book.author %></td>
                        <td><%= book.genre %></td>
                        <td><%= book.availableCopies %>/<%= book.totalCopies %></td>
                        <td>
                            <button onclick="editBook('<%= book._id %>')">Edit</button>
                            <button onclick="deleteBook('<%= book._id %>')">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <div class="section">
        <h2>Borrowing Records</h2>
        <table>
            <thead>
                <tr>
                    <th>User</th>
                    <th>Book</th>
                    <th>Borrow Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% borrows.forEach(borrow => { %>
                    <tr>
                        <td><%= borrow.username %></td>
                        <td><%= borrow.bookTitle %></td>
                        <td><%= new Date(borrow.borrowDate).toLocaleDateString() %></td>
                        <td><%= borrow.status %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script>
        // Admin JavaScript functionality would go here
        document.getElementById('addBookForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await fetch('/api/admin/books', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Book added successfully!');
                    location.reload();
                } else {
                    alert('Error adding book');
                }
            } catch (error) {
                alert('Error adding book');
            }
        });

        async function deleteBook(bookId) {
            if (confirm('Are you sure you want to delete this book?')) {
                try {
                    const response = await fetch(`/api/admin/books/${bookId}`, {
                        method: 'DELETE'
                    });
                    
                    if (response.ok) {
                        alert('Book deleted successfully!');
                        location.reload();
                    } else {
                        alert('Error deleting book');
                    }
                } catch (error) {
                    alert('Error deleting book');
                }
            }
        }

        function editBook(bookId) {
            // Implementation for edit functionality
            alert('Edit book: ' + bookId);
        }
    </script>
</body>
</html>
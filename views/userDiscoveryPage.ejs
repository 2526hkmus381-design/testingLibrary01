<!-- views/userDiscoveryPage.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Discovery Page</title>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Inter font from Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 20px;
            font-family: 'Inter', sans-serif;
            background-color: #ffffff;
            color: #333;
        }

        h1 {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 20px;
            color: #333;
            
        }
        bookTitle {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 20px;
            color: #333;
            width:200px;
            white-space:nowrap;
            overflow:hidden;
            text-overflow:ellipsis;
        }

        .book-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 20px;
        }

        .book-card {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 1px 2px rgba(0,0,0,0.1);
            transition: transform 0.2s;
            cursor: pointer;
        }

        .book-card:hover {
            transform: translateY(-5px);
        }

        .book-card h3 {
            font-size: 13px;
            font-weight: 700;
            margin: 0 0 10px 0;
            color: #333;
            width:130px;
            white-space:nowrap;
            overflow:hidden;
            text-overflow:ellipsis;
        }

        .book-card p {
            margin: 5px 0;
            font-size: 14px;
            color: #666;
        }

        .book-card .available {
            color: #28a745;
            font-weight: bold;
        }

        .book-card .unavailable {
            color: #dc3545;
            font-weight: bold;
        }

        .no-books {
            font-size: 16px;
            text-align: center;
            color: #666;
            margin-top: 20px;
        }
    </style>
</head>
<body></div>
    <h1>Recommended</h1>

    <% if (typeof books !== 'undefined' && books.length > 0) { %>
        <div class="book-grid">
            <% books.forEach(book => { %>
                <div class="book-card" onclick="window.location.href='/book-details/<%= book._id %>'">
                    <img src="<%=book.coverUri%>" alt="Description of image" style="height: 200px; width: auto;">
                    
                    <h3><%= book.title || 'Untitled' %></h3>
                    
                    
                    <p> <%= book.author || 'Unknown' %></p>
                    
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p class="no-books">No books available at the moment.</p>
    <% } %>
</body>
</html>
